<Page x:Class="LangBox.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LangBox.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TabControl Grid.Row="0" Grid.Column="0" TabStripPlacement="Top">
            <TabItem Name="Languages" Header="Languages" Visibility="Visible" BorderBrush="#FFFBFBFB" Background="#FFFBFBFB">
                <StackPanel Margin="10,5">
                    <CheckBox Name="SelectAll" Checked="SelectAll_Checked" Unchecked="SelectAll_Checked">Select All</CheckBox>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
                        <WrapPanel Name="LangSelect"  Margin="20,5">
                            <CheckBox Name="C" IsChecked="True">C</CheckBox>
                            <CheckBox Name="CPlusPlus">C++</CheckBox>
                            <CheckBox Name="Python">Python</CheckBox>
                            <CheckBox Name="Java">Java</CheckBox>
                            <CheckBox Name="CSharp">C#</CheckBox>
                        </WrapPanel>
                    </ScrollViewer>
                </StackPanel>
            </TabItem>

            <TabItem Name="IDE" Header="IDE" BorderBrush="#FFFBFBFB" Background="#FFFBFBFB">
                <TabItem.Content>推荐IDE</TabItem.Content>
            </TabItem>

            <TabItem Name="Allocation" Header="Allocation" Background="#FFFBFBFB" BorderBrush="#FFFBFBFB">
                <StackPanel x:Name="SelectPath" Margin="10,5" Orientation="Vertical">


                    <Grid>
                        <Grid.RowDefinitions >
                            <RowDefinition Height="2*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" TextAlignment="Left">Programming Languages</TextBlock>
                        <TextBox Grid.Row="1" Grid.Column="0" Name="PathInput" Margin="0 5 10 5" TextChanged="PathInput_TextChanged" >C:\Program Files\LangBox\lang</TextBox>
                        <Button Grid.Row="1" Grid.Column="1" Margin="5 0 10 0" MaxWidth="67" VerticalAlignment="Center"  Click="Browse_Click">Browse</Button>
                        <TextBlock 
                            Name="PathValidity"
                            Grid.Row="3"
                            TextAlignment="Left"
                            Foreground="Red">
                            PErr
                        </TextBlock>
                    </Grid>


                </StackPanel>
            </TabItem>
        </TabControl>

        <TextBlock Name="AllocatedPath"  Grid.Row="1" Grid.Column="0" 
                   Block.TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Hyperlink Click="Hyperlink_Click">GitHub</Hyperlink>
        </TextBlock>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Stretch" >要求的总空间 *MB</TextBlock>
            <Button Margin="0,10" Name="InstallButton" VerticalAlignment="Stretch" HorizontalAlignment="Center">Install</Button>
        </StackPanel>
    </Grid>


</Page>
