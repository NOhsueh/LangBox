<Page x:Class="LangBox.Pages.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LangBox.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome">

    <TabControl TabStripPlacement="Top"  BorderBrush="#FFFBFBFB" >
        <TabItem Name="Languages" Header="Languages" Visibility="Visible" BorderBrush="#FFFBFBFB" Background="#FFFBFBFB">
            <StackPanel Margin="10">
                <StackPanel Margin="10,5">
                    <CheckBox Name="SelectAll" Checked="SelectAll_Checked" Unchecked="SelectAll_Checked">Select All</CheckBox>
                    <WrapPanel Name="LangSelect"  Margin="20,5">
                        <CheckBox Name="C" IsChecked="True">C</CheckBox>
                        <CheckBox Name="CPlusPlus" >C++</CheckBox>
                        <CheckBox Name="Python" >Python</CheckBox>
                        <CheckBox Name="Java" >Java</CheckBox>
                        <CheckBox Name="CSharp">C#</CheckBox>
                    </WrapPanel>
                </StackPanel>
            </StackPanel>
        </TabItem>

        <TabItem Name="IDEs" Header="IDEs" BorderBrush="#FFFBFBFB" Background="#FFFBFBFB">
            <TabItem.Content>推荐IDE</TabItem.Content>
        </TabItem>

        <TabItem Name="Allocation" Header="Allocation" Background="#FFFBFBFB" BorderBrush="#FFFBFBFB">
            <TabItem.Content>分配位置</TabItem.Content>
        </TabItem>
    </TabControl>

</Page>
