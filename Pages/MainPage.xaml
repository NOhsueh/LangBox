<Page x:Class="LangBox.Pages.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LangBox.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome">
    <TabControl TabStripPlacement="Top" Background="White" BorderBrush="#FFFBFBFB" >
        <TabItem Name="tabIitemContent" Header="TabItem with Buttons" Visibility="Visible" BorderBrush="#FFFBFBFB" Background="#FFFBFBFB">
            <StackPanel>
                <Button Content="_OK"/>
                <Button Content="_Cancel"/>
            </StackPanel>
        </TabItem>

        <TabItem Name="backgroundcolor" Header="Background" BorderBrush="#FFFBFBFB" Background="#FFFBFBFB">
            <TabItem.Content>Background property information goes here.</TabItem.Content>
        </TabItem>

        <TabItem Name="foregroundcolor" Header="Foreground" Background="#FFFBFBFB" BorderBrush="#FFFBFBFB">
            <TabItem.Content>Foreground property information goes here.</TabItem.Content>
        </TabItem>

        <TabItem Name="bordercolor" Header="BorderColor" Background="#FFFBFBFB" BorderBrush="#FFFBFBFB">
            <TabItem.Content>Border color property information goes here.</TabItem.Content>
        </TabItem>
    </TabControl>

</Page>
